pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // from Git repo pull code
                git 'https://github.com/halokid/NeonRabbitGW.git'
            }
        }

        stage('Build') {
            steps {
                // implement build steps, example build, pack etc.
                sh 'cargo build --release'
            }
        }

        stage('Test') {
            steps {
                // use a specify test mode for unit test
                // implememnt testing steps, example unit test, integration test
                // sh 'npm test' // example for Node.js project
                sh 'Run project unit test'
            }
        }

        stage('Deploy') {
            steps {
                // build Docker image and push to Docker Registry
                script {
                    docker.build('your-image-name:latest').push()
                }
                // run container
                sh 'docker run -d -p 8080:80 your-image-name:latest' // assume listen port is 80
            }
        }
    }

    post {
        success {
            // opreation to be executed when pipeline success implement
            echo 'CI/CD Pipeline executed successfully!'
        }
        failure {
            // opreation to be executed when pipeline fail implement
            echo 'CI/CD Pipeline failed!'
        }
    }
}

